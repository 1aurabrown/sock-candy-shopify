{%- capture navigation_class -%}
z-10 absolute hidden md:block top-0 bottom-0 h-full outline-none w-1/4 md:w-1/8
{%- endcapture -%}

<section class="bg-rose pt-14 md:pt-32 {{ section.settings.border_top_class }}">

  <h2 data-animate="slide-up" class="text-center max-w-sm-em mx-auto text-xl-mob md:text-2xl-tight-desk">{{ section.settings.heading }}</h2>

  <div
  class="block mt-9 md:mt-12 grid grid-rows-4 grid-cols-2 md:grid-rows-2 md:grid-cols-4"
  href="{{ section.settings.url }}"
  title="{{ section.settings.heading }}" >
    {% for block in section.blocks %}
      <a
      data-animate="fade-in delay"
      class="block"
      target="_blank"
      href="{{ block.settings.url }}">
        {% include 'responsive-image',
          image: block.settings.image,
          crop_aspect_ratio: 1,
          inline_aspect_ratio: true,
          alt: block.settings.alt,
          fit: 'cover' %}
      </a>
    {% endfor %}
  </div>

</section>

{% schema %}
  {
    "name": "Image Grid",
    "max_blocks": 8,
    "settings": [
      {
        "type": "select",
        "id": "border_top_class",
        "label": "Top Border",
        "default": "border-t-0",
        "options": [
          {
            "value": "border-t-0",
            "label": "None"
          },
          {
            "value": "md:border-t",
            "label": "Desktop Only"
          },
          {
            "value": "border-t md:border-t-0",
            "label":  "Mobile Only"
          },
          {
            "value": "border-t",
            "label": "Mobile & Desktop"
          }
        ]
      },
      {
        "label": "Heading",
        "id": "heading",
        "type": "text",
        "default": "#SockCandyOfTheDay"
      },
      {
        "label": "Open link in new window",
        "id": "target_blank",
        "type": "checkbox",
        "default": true
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "label": "Image",
            "id": "image",
            "type": "image_picker"
          },
          {
            "label": "Link URL",
            "id": "url",
            "type": "url",
            "default": "/"
          },
          {
            "label": "Alt Text",
            "id": "alt",
            "type": "text",
            "default": "#SockCandyOfTheDay"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image Grid",
        "category": "Image",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          },
          {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}

