{% assign default_text = "Pair with mule sandals to transition from Summer to Fall, or wear with ankle booties and let the ruffle hem peek out." %}
{% assign text = product.metafields.accentuate.split_text | default: default_text %}
{% assign image = product.metafields.accentuate.split_image[0] %}
{% assign layout = product.metafields.accentuate.split_layout %}

<section class="pdp-split bg-orange">
  <div class="md:flex md:flex-row items-center md:px-10 md:py-16 lg:px-10 lg:py-23 justify-between mx-auto max-w-screen-xl">

    <div data-animate="fade-in" class="pdp-split__image md:w-1/3 {% if layout == 'Text - Image' %}md:order-1{% endif %} md:px-6">
      {% include 'responsive-image-accentuate' with
        image: image,
        crop_aspect_ratio: 1
      %}
    </div>

    <div data-animate="slide-up delay" class="pdp-split__text py-11 text-center md:text-left md:py-0 md:w-2/3 px-6 md:px-10 lg:px-24">
      {% if text != blank %}
        <h2 class="mx-auto text-xl-mob md:text-xl-tight-desk lg:text-2xl-tight-desk max-w-sm-em">{{ text | escape }}</h2>
      {% endif %}
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Split Image / Text",
    "settings": [
      {
        "type": "paragraph",
        "content": "This section is configured for each product individually using Accentuate."
      }
    ]
  }
{% endschema %}
