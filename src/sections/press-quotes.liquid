<section class="press-quotes bg-rose" data-section-type="press-quotes" data-section-id="{{ section.id }}">

  <div class="press-quotes__texts mela-animate text-xl-mob md:text-2xl-tight-desk md:pt-2">
    <div class="swiper-container">

      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide p-16 pb-6 text-center" data-index="{{ forloop.index }}">
            <q>{{ block.settings.text }}</q>
          </div>
        {% endfor %}
      </div>

      <div class="md:hidden swiper-pagination"></div>
    </div>

  </div>
  <div class="press-quotes__images md:mx-16 md:px-2 md:pb-24 md:pt-12">
    <div class="swiper-container">
      <div class="swiper-wrapper md:flex md:flex-row">
        {% for block in section.blocks %}
          <div tabindex="0"
          role="button"
          class="pt-2 pb-16 px-4 md:p-0 cursor-pointer swiper-slide md:flex-1 md:items-center relative"
          data-index="{{ forloop.index0 }}">
            <div class="w-32 md:w-auto mx-auto md:mx-20-per mela-animate delay-{{ forloop.index | times: 100 }}">
              {% include 'responsive-image',
                image: block.settings.image,
                wrapper_class: 'pt-40-per',
                inline_aspect_ratio: false,
                fit: 'contain' %}
              </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

</section>

{% schema %}
  {
    "name": "Press Quotes",
    "max_blocks": 12,
    "blocks": [
      {
        "type": "press-quote",
        "name": "Press Quote",
        "settings": [
          {
            "label": "Text",
            "id": "text",
            "type": "textarea",
            "default": "The sock brand we can't stop talking about"
          },
          {
            "label": "Logo",
            "id": "image",
            "type": "image_picker"
          },
          {
            "label": "Source",
            "id": "source",
            "type": "text",
            "info": "Used as alt text for image",
            "default": "Press Source"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Press Quotes",
        "category": "Press",
        "blocks": [
          {
            "type": "press-quote"
          },
          {
            "type": "press-quote"
          },
          {
            "type": "press-quote"
          },
          {
            "type": "press-quote"
          },
          {
            "type": "press-quote"
          }
        ]
      }
    ]
  }
{% endschema %}

