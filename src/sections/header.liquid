{% capture 'desktop_list_class' %}
  pt-2 hidden md:flex flex-row items-center md:space-x-8 lg:space-x-16 site-header__nav
{% endcapture %}

{% capture 'list_wrapper_class' %}
  uppercase-sm-mob md:uppercase-desk
{% endcapture %}

<div data-section-id="{{ section.id }}" data-section-type="header-section" class="site-header">
  {% if section.settings.announcement != blank %}
    <div class="site-header__announcement text-center px-8 lg:px-16 py-2 md:py-4 bg-orange border-b-2 flex-center">
      <p class="pt-1">{{ section.settings.announcement }}</p>
    </div>
  {% endif %}
  <header role="banner" class="px-8 lg:px-16 flex flex-row items-center bg-rose site-header__nav">
    <nav role="navigation" class="z-10 pt-12 pb-10 px-10 bg-off-white block fixed md:hidden top-0 left-0 bottom-0 w-4/5 flex flex-col justify-between items-start">
      <div class="">
        <button class="block w-4 site-header__close-nav" type="button">
          <img src="{{ 'close.svg' | asset_url }}" alt="Close Menu" />
          <span class="hamburger-label uppercase-sm-mob sr-only">Close Menu</span>
        </button>
        <ul class="space-y-10 mt-10 text-xl-mob">
          {% include 'nav-list' list: section.settings.left_linklist %}
          {% include 'nav-list' list: section.settings.left_linklist %}
          {% include 'account-links' %}
        </ul>
      </div>
      <img class="w-10" src="{{ 'logomark.svg' | asset_url }}" alt="{{ shop.name }}"/>
    </nav>
    <nav role="navigation" class="flex-1 {{ list_wrapper_class }}">
      <button class="block w-4 mr-auto md:hidden site-header__hamburger" type="button">
        <img src="{{ 'hamburger.svg' | asset_url }}" alt="Menu" />
        <span class="hamburger-label uppercase-sm-mob sr-only">Menu</span>
      </button>
      <ul class="{{ desktop_list_class }} justify-start">
        {% include 'nav-list' list: section.settings.left_linklist %}
      </ul>
    </nav>

    {% if template.name == 'index' %}
      <h1 class="flex-none" itemscope itemtype="http://schema.org/Organization">
    {% else %}
      <div class="flex-none" itemscope itemtype="http://schema.org/Organization">
    {% endif %}

      <a class="site-header__logo-wrapper block" href="/" itemprop="url" class="site-logo{% if section.settings.logo != blank %} site-header__logo-image{% endif %}">
        <img class="block" src="{{ 'logo.svg' | asset_url }}" alt="{{ shop.name }}" itemprop="logo">
      </a>

    {% if template.name == 'index' %}
      </h1>
    {% else %}
      </div>
    {% endif %}


    <nav role="navigation" class="flex-1 {{ list_wrapper_class }}">
      <ul class="{{ desktop_list_class }} justify-end">
        {% include 'nav-list' list: section.settings.left_linklist %}
        {% include 'account-links' %}

        <li>
          <a href="/cart">
            {{ 'layout.cart.title' | t }}
          </a>
        </li>
      </ul>

      <div class="md:hidden text-right pt-1">
        <a href="/cart">
          {{ 'layout.cart.title' | t }}
        </a>
      </div>
    </nav>
  </header>
</div>

{% schema %}
  {
    "name": "Header",
    "class": "sticky top-0",
    "settings": [
      {
        "type": "text",
        "id": "announcement",
        "label": "Announcement",
        "default": "Luptatia cumet, sum veles nam laborec tempor si voluptat aute voluptur lorem ispum dolorpostrum."
      },
      {
        "type": "link_list",
        "id": "left_linklist",
        "label": "Menu",
        "default": "main-menu"
      },
      {
        "type": "link_list",
        "id": "right_linklist",
        "label": "Menu",
        "default": "main-menu"
      }
    ]
  }
{% endschema %}
