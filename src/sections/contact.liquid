<section class="contact px-6 md:px-18 md:pb-45">
  <div class="md:flex md:flex-row items-center justify-between mx-auto max-w-screen-xl">

    <div data-animate="fade-in" class="contact__image md:w-1/2 lg:w-1/3">
      {% include 'responsive-image' with
        image: section.settings.image,
        crop_aspect_ratio: 1
      %}
    </div>

    <div data-animate="slide-up delay" class="contact__text py-11 text-center md:text-left md:py-0 md:w-1/2 lg:w-2/3 md:pl-18">
      {% if page.content != blank %}
        <div class="mx-auto text-xl-mob md:text-xl-tight-desk lg:text-2xl-tight-desk space-y-8">{{ page.content }}</div>
      {% endif %}
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Contact",
    "settings": [
      {
        "label": "Image",
        "id": "image",
        "type": "image_picker"
      }
    ]
  }
{% endschema %}
