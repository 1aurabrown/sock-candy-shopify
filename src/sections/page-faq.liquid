<section data-section-type="page-faq" data-section-id="{{ section.id }}" class="max-w-screen-xl mx-auto px-6 md:px-18">
  {% for block in section.blocks %}
    {% if block.type == 'heading' %}
      <h2 class="text-xl-mob md:text-2xl-tight-desk border-b-1 pb-4 mb-5 mt-11 md:pb-6 md:mb-6 md:mt-20">{{ block.settings.text }}</h2>
    {% elsif block.type == 'item' %}

      {% assign question = block.settings.question %}
      {% assign answer = block.settings.answer %}

      {% if question != blank and answer != blank %}

        <div class="faq-item py-2 md:py-5">

          <h3 class="pb-2 md:pb-5 cursor-pointer faq-item__heading flex flex-row justify-between items-center uppercase-md-mob md:uppercase-desk"><span class="mt-thin md:mt-1">{{ question }}</span><span class="faq-item__toggle-arrow transition-transform duration-300 transform rotate-0">{% include 'arrow-right.svg' %}</span></h3>

          <div class="faq-item__content hidden">
            <div class="paragraphs">{{ answer }}</div>
          </div>
        </div>
      {% endif %}

    {% endif %}
  {% endfor %}
</section>

{% schema %}
  {
    "name": "FAQ",
      "blocks": [
      {
        "type": "heading",
        "name": "Section Heading",
        "settings": [
          {
            "label": "Section Heading",
            "id": "text",
            "type": "textarea",
            "default": "Product & Care"
          }
        ]
      },
      {
        "type": "item",
        "name": "FAQ Item",
        "settings": [
          {
            "label": "Question",
            "id": "question",
            "type": "textarea",
            "default": "How do I wash and care for my socks?"
          },
          {
            "label": "Answer",
            "id": "answer",
            "type": "textarea",
            "default": "To best preserve the color, quality and lifespan of your Sock Candy socks, turn the socks inside out and wash in cold water. Our socks will last longer if hang dried. If you must use the dryer for the cotton socks, please use the tumble dry low setting. Sheer socks should not be tumbled dried."
          }
        ]
      }
    ]
  }
{% endschema %}
